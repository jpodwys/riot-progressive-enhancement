<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/pure.min.css">
    <style>
      #main-wrapper {
        margin: auto;
        max-width: 850px;
      }
      #view-wrapper {
        box-sizing: border-box;
        padding: 0 25px;
      }
      .pure-button {
        border-radius: 4px;
      }
      .button-success,
      .button-error,
      .button-warning,
      .button-secondary {
        color: white;
        border-radius: 4px;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
      }
      .button-success {
        background: rgb(28, 184, 65); /* this is a green */
      }
      .button-error {
        background: rgb(202, 60, 60); /* this is a maroon */
      }
      .button-warning {
        background: rgb(223, 117, 20); /* this is an orange */
      }
      .button-secondary {
        background: rgb(66, 184, 221); /* this is a light blue */
      }
    </style>
  </head>
  <body>

    <div id="main-wrapper">

      <div id="view-wrapper">

        <div class="pure-menu pure-menu-horizontal">
          <ul class="pure-menu-list">
              <li class="pure-menu-item"><a href="/" class="pure-menu-link">Entries</a></li>
              <li class="pure-menu-item"><a href="/new" class="pure-menu-link">New Entry</a></li>
          </ul>
        </div>

        <main><%- tag %></main>

        <br/><br/>
        <p>Check out the code <a href="https://github.com/jpodwys/riot-progressive-enhancement">here!</a></p>

      </div>

    </div>

    <script>
      if('querySelector' in document
          && 'localStorage' in window
          && 'addEventListener' in window
          && 'history' in window && history.pushState){
        var scripts = [
          {src: '/js/bundle.js', type: 'text/javascript', priority: 'defer'}
        ];
        for(var i = 0; i < scripts.length; ++i){
          var script = scripts[i];
          var tag = document.createElement('script');
          if(script.priority) tag.setAttribute(script.priority, '');
          tag.setAttribute('src', script.src);
          tag.setAttribute('type', script.type);
          document.getElementsByTagName('head')[0].appendChild(tag);
        }
      }
    </script>
  </body>
</html>